@model InvoiceTemplateUpload.Application.Invoicing.DTO.InvoiceDto
@{ Layout = "_InvoiceLayout2";


}
<div class="container bootdey">
    <div class="row">
        <div class="col-sm-10 col-sm-offset-1">
            <div class="widget-box">
                <div class="widget-header widget-header-large">
                    <h3 class="widget-title grey lighter">
                        @*<i class="ace-icon fa fa-leaf green"></i>*@
                        <img src="@Url.Content(Model.Logo)" height="40" width="80" />
                        @Model.Name
                    </h3>

                    <div class="widget-toolbar no-border invoice-info">
                        <span class="invoice-info-label">Invoice:</span>
                        <span class="red">#@Model.InvoiceNumber</span>

                        @*<br>
                            <span class="invoice-info-label">Issue Date:</span>
                            <span class="blue">@Model.StartDate</span>

                            <br>
                            <span class="invoice-info-label">Due Date:</span>
                            <span class="blue">@Model.EndDate</span>*@
                    </div>

                    <div class="widget-toolbar hidden-480">
                        <a href="javascript:void()" onclick="window.print()">
                            <i class="ace-icon fa fa-print"></i>
                        </a>
                        @*<a asp-action="PrintDetail2" asp-route-id="@Model.Id">
                                <i class="ace-icon fa fa-print"></i>
                            </a>*@
                    </div>
                </div>

                <div class="widget-body">
                    <div class="widget-main padding-24">
                        <div class="row">
                            <div class="col-sm-6">
                                @*<div class="row">
                                        <div class="col-xs-11 label label-lg label-info arrowed-in arrowed-right">
                                            <b>Company Info</b>
                                        </div>
                                    </div>*@

                                <div>
                                    <ul class="list-unstyled spaced">
                                        <li>
                                            <i class="ace-icon fa fa-caret-right blue"></i>Company Name: @Model.Name
                                        </li>

                                        <li>
                                            <i class="ace-icon fa fa-caret-right blue"></i>Address: @Model.Address
                                        </li>

                                        <li>
                                            <i class="ace-icon fa fa-caret-right blue"></i>Bank Name: @Model.BankName
                                        </li>

                                        <li>
                                            <i class="ace-icon fa fa-caret-right blue"></i>
                                            Account Name: @Model.AccountName
                                            <b class="red"></b>
                                        </li>

                                        <li>
                                            <i class="ace-icon fa fa-caret-right blue"></i>
                                            Account Number:
                                            <b class="red">@Model.AccountNo</b>
                                        </li>

                                        <li class="divider"></li>

                                        @*<li>
                                                <i class="ace-icon fa fa-caret-right blue"></i>
                                                Paymant Info
                                            </li>*@
                                    </ul>
                                </div>
                            </div><!-- /.col -->

                            <div class="col-sm-6">
                                @*<div class="row">
                                        <div class="col-xs-11 label label-lg label-success arrowed-in arrowed-right">
                                            <b>Customer Info</b>
                                        </div>
                                    </div>*@

                                <div>
                                    <ul class="list-unstyled  spaced">
                                        <li>
                                            <i class="ace-icon fa fa-caret-right green"></i>ID: @Model.InvoiceNumber
                                        </li>

                                        <li>
                                            <i class="ace-icon fa fa-caret-right green"></i>Issue Date:  @DateTime.Parse(Model.StartDate).ToString("MM/dd/yyyy")
                                        </li>

                                        <li>
                                            <i class="ace-icon fa fa-caret-right green"></i>Due Date.  @DateTime.Parse(Model.EndDate).ToString("MM/dd/yyyy")
                                        </li>

                                        <li class="divider"></li>

                                        @*<li>
                                                <i class="ace-icon fa fa-caret-right green"></i>
                                                Contact Info
                                            </li>*@
                                    </ul>
                                </div>
                            </div><!-- /.col -->
                        </div><!-- /.row -->

                        <div class="space"></div>

                        <div>
                            <table class="table table-striped table-bordered">
                                <thead>
                                    <tr>
                                        <th class="center">#</th>
                                        <th>Description</th>
                                        <th class="hidden-xs">Price</th>
                                        <th class="hidden-480">Quantity</th>
                                        @*<th>VatRate</th>*@
                                        <th>Total Price</th>
                                    </tr>
                                </thead>

                                <tbody>
                                    <tr>
                                        <td class="center">#</td>

                                        <td>
                                            @Model.ServiceName
                                        </td>
                                        <td class="hidden-xs">
                                            @Model.CurrencyPrefix@Model.ServicePrice.GetValueOrDefault().ToString("#,##0.00")
                                        </td>
                                        <td class="hidden-480">@Model.Quantity</td>
                                        @*<td>@Model.VatRate%</td>*@
                                        <td>@Model.CurrencyPrefix@Model.Total.GetValueOrDefault().ToString("#,##0.00")</td>
                                    </tr>


                                </tbody>
                            </table>
                        </div>

                        <div class="hr hr8 hr-double hr-dotted"></div>

                        <div class="row">
                            <div class="col-sm-5 pull-right">

                            </div>
                            <div class="col-sm-7 pull-left">
                                <h4 class="pull-right">
                                    Discount(@Model.Discount%):
                                    <span class="red">@Model.CurrencyPrefix@Model.DiscountValue.GetValueOrDefault().ToString("#,##0.00")</span>
                                </h4>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-sm-5 pull-right">

                            </div>
                            <div class="col-sm-7 pull-left">
                                <h4 class="pull-right">
                                    Sub Total:
                                    <span class="red">@Model.CurrencyPrefix@Model.SubTotal.GetValueOrDefault().ToString("#,##0.00")</span>
                                </h4>
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-5 pull-right">

                            </div>
                            <div class="col-sm-7 pull-left">
                                <h4 class="pull-right">
                                    Tax(@Model.VatRate%):
                                    <span class="red">@Model.CurrencyPrefix@Model.Vat.GetValueOrDefault().ToString("#,##0.00")</span>
                                </h4>
                            </div>
                        </div>

                        <hr />
                        <div class="row">
                            <div class="col-sm-5 pull-right">

                            </div>
                            <div class="col-sm-7 pull-left">
                                <h4 class="pull-right">
                                    Total Amount :
                                    <span class="red">@Model.CurrencyPrefix@Model.GrandTotal.GetValueOrDefault().ToString("#,##0.00")</span>
                                </h4>
                            </div>
                        </div>

                        <div class="space-6"></div>
                        @*<div class="well">
                                Thank you for choosing Ace Company products.
                                We believe you will be satisfied by our services.
                            </div>*@
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>