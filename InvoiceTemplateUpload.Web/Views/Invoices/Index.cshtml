@model IEnumerable<InvoiceTemplateUpload.Application.Invoicing.DTO.InvoiceDto>

@{
    ViewData["Title"] = "Index";
}

<h1>Invoices</h1>

<p>
    @*<a href="@Url.Content()">Download Excel Format</a><br />*@
    <a asp-action="SaveInvoice">Add Invoice</a><br />
    <a asp-action="Import">Add Bulk Invoice</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceNumber)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.AccountName)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.AccountNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BankName)
            </th>
            <th>
                Template
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServiceName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ServicePrice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.InvoiceNumber)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AccountName)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.AccountNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BankName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.InvoiceTemplateType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServiceName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ServicePrice)
            </td>
            <td>
                @*<a asp-action="SaveInvoice" asp-route-id="@item.Id">Edit</a> |*@
                @if (item.InvoiceTemplateType == "1")
                {
                    <a asp-action="Details" asp-route-id="@item.Id">Details</a>
                }
                else if (item.InvoiceTemplateType == "2")
                {
                    <a asp-action="Detail2" asp-route-id="@item.Id">Details</a>
                }

                @*<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
            </td>
        </tr>
        }
    </tbody>
</table>
