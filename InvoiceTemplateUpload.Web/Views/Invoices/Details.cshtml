@model InvoiceTemplateUpload.Application.Invoicing.DTO.InvoiceDto

@{
    ViewData["Title"] = "Details";
    Layout = "_InvoiceLayout";
}
<div class="page-content container">
    <div class="page-header text-blue-d2">
        <h1 class="page-title text-secondary-d1">
            Invoice
            <small class="page-info">
                <i class="fa fa-angle-double-right text-80"></i>
                ID: #@Model.InvoiceNumber
            </small>
        </h1>

        <div class="page-tools">
            <div class="action-buttons">
                @*<a class="btn bg-white btn-light mx-1px text-95" href="#" data-title="Print">
                        <i class="mr-1 fa fa-print text-primary-m1 text-120 w-2"></i>
                        Print
                    </a>*@
                @*<a class="btn bg-white btn-light mx-1px text-95" asp-action="PrintDetails" asp-route-id="@Model.Id" data-title="PDF">
                        <i class="mr-1 fa fa-file-pdf-o text-danger-m1 text-120 w-2"></i>
                        Export
                    </a>*@

                <a href="javascript:void()" class="btn bg-white btn-light mx-1px text-95" onclick="window.print()" data-title="PDF">
                    <i class="mr-1 fa fa-file-pdf-o text-danger-m1 text-120 w-2"></i>
                    Export
                </a>
            </div>
        </div>
    </div>

    <div class="container px-0">
        <div class="row mt-4">
            <div class="col-12 col-lg-10 offset-lg-1">
                <div class="row">
                    <div class="col-12">
                        <div class="text-center text-150">
                            @*<i class="fa fa-book fa-2x text-success-m2 mr-1"></i>*@
                            <img src="@Url.Content(Model.Logo)" height="80" width="80" />
                            <span class="text-default-d3">@Model.Name</span>
                        </div>
                    </div>
                </div>
                <!-- .row -->

                <hr class="row brc-default-l1 mx-n1 mb-4" />

                <div class="row">
                    <div class="col-sm-6">
                        <div>
                            <span class="text-sm text-grey-m2 align-middle">From:</span>
                            <span class="text-600 text-110 text-blue align-middle">@Model.Name</span>
                        </div>
                        <div class="text-grey-m2">
                            <div class="my-1">
                                Address: @Model.Address
                            </div>
                            <div class="my-1">
                                Bank Name: @Model.BankName
                            </div>
                            <div class="my-1">
                                Account Name: @Model.AccountName
                            </div>
                            <div class="my-1">
                                Account Number: @Model.AccountNo
                            </div>
                            @*<div class="my-1"><i class="fa fa-phone fa-flip-horizontal text-secondary"></i> <b class="text-600">111-111-111</b></div>*@
                        </div>
                    </div>
                    <!-- /.col -->

                    <div class="text-95 col-sm-6 align-self-start d-sm-flex justify-content-end">
                        <hr class="d-sm-none" />
                        <div class="text-grey-m2">
                            <div class="mt-1 mb-2 text-secondary-m1 text-600 text-125">
                                Invoice
                            </div>

                            <div class="my-2"><i class="fa fa-circle text-blue-m2 text-xs mr-1"></i> <span class="text-600 text-90">ID:</span> #@Model.InvoiceNumber</div>
                            @*<div class="my-2"><i class="fa fa-circle text-blue-m2 text-xs mr-1"></i> <span class="text-600 text-90">Bank:</span> @Model.BankName</div>
                                <div class="my-2"><i class="fa fa-circle text-blue-m2 text-xs mr-1"></i> <span class="text-600 text-90">Account Number:</span> @Model.AccountNo</div>*@

                            <div class="my-2"><i class="fa fa-circle text-blue-m2 text-xs mr-1"></i> <span class="text-600 text-90">Issue Date:</span> @DateTime.Parse(Model.StartDate).ToString("MM/dd/yyyy") </div>
                            <div class="my-2"><i class="fa fa-circle text-blue-m2 text-xs mr-1"></i> <span class="text-600 text-90">Due Date:</span> @DateTime.Parse(Model.EndDate).ToString("MM/dd/yyyy")</div>

                            @*<div class="my-2"><i class="fa fa-circle text-blue-m2 text-xs mr-1"></i> <span class="text-600 text-90">Status:</span> <span class="badge badge-warning badge-pill px-25">Unpaid</span></div>*@
                        </div>
                    </div>
                    <!-- /.col -->
                </div>

                <div class="mt-4">
                    <div class="row text-600 text-white bgc-default-tp1 py-25">
                        @*<div class="d-none d-sm-block col-4 col-sm-2">#</div>*@
                        <div class="d-none d-sm-block col-8 col-sm-4">Description</div>
                        <div class="d-none d-sm-block col-4 col-sm-2">Price</div>
                        <div class="d-none d-sm-block col-sm-2">Quantity</div>
                        @*<div class="d-none d-sm-block col-4 col-sm-2">VatRate</div>*@
                        <div class="d-none d-sm-block col-4 col-sm-2">Total Price</div>
                    </div>

                    <div class="text-95 text-secondary-d3">
                        <div class="row mb-2 mb-sm-0 py-25">
                            @*<div class="d-none d-sm-block col-4 col-sm-2">#</div>*@
                            <div class="d-none d-sm-block col-8 col-sm-4">@Model.ServiceName</div>
                            <div class="d-none d-sm-block col-4 col-sm-2">@Model.CurrencyPrefix@Model.ServicePrice.GetValueOrDefault().ToString("#,##0.00")</div>
                            <div class="d-none d-sm-block col-4 col-sm-2">@Model.Quantity</div>
                            @*<div class="d-none d-sm-block col-4 col-sm-2">@Model.VatRate%</div>*@
                            <div class="d-none d-sm-block col-4 col-sm-2">@Model.CurrencyPrefix@Model.Total.GetValueOrDefault().ToString("#,##0.00")</div>
                        </div>

                    </div>

                    <div class="row border-b-2 brc-default-l2"></div>
                    <hr />


                    <div class="row mt-3">
                        <div class="col-12 col-sm-7 text-grey-d2 text-95 mt-2 mt-lg-0">
                            @*Extra note such as company or payment information...*@
                        </div>

                        <div class="col-12 col-sm-5 text-grey text-90 order-first order-sm-last">
                            <div class="row my-2">
                                <div class="col-7 text-right">
                                    Discount(@Model.Discount%)
                                </div>
                                <div class="col-5">
                                    <span class="text-120 text-secondary-d1">@Model.CurrencyPrefix@Model.DiscountValue.GetValueOrDefault().ToString("#,##0.00")</span>
                                </div>
                            </div>


                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-12 col-sm-7 text-grey-d2 text-95 mt-2 mt-lg-0">
                            @*Extra note such as company or payment information...*@
                        </div>

                        <div class="col-12 col-sm-5 text-grey text-90 order-first order-sm-last">
                            <div class="row my-2">
                                <div class="col-7 text-right">
                                    SubTotal
                                </div>
                                <div class="col-5">
                                    <span class="text-120 text-secondary-d1">@Model.CurrencyPrefix@Model.SubTotal.GetValueOrDefault().ToString("#,##0.00")</span>
                                </div>
                            </div>

                        </div>
                    </div>

                    <div class="row mt-3">
                        <div class="col-12 col-sm-7 text-grey-d2 text-95 mt-2 mt-lg-0">
                            @*Extra note such as company or payment information...*@
                        </div>

                        <div class="col-12 col-sm-5 text-grey text-90 order-first order-sm-last">
                            <div class="row my-2">
                                <div class="col-7 text-right">
                                    Tax(@Model.VatRate%)
                                </div>
                                <div class="col-5">
                                    <span class="text-120 text-secondary-d1">@Model.CurrencyPrefix@Model.Vat.GetValueOrDefault().ToString("#,##0.00")</span>
                                </div>
                            </div>


                        </div>
                    </div>



                    <div class="row mt-3">
                        <div class="col-12 col-sm-7 text-grey-d2 text-95 mt-2 mt-lg-0">
                            @*Extra note such as company or payment information...*@
                        </div>

                        <div class="col-12 col-sm-5 text-grey text-90 order-first order-sm-last">
                            <div class="row my-2">
                                <div class="col-7 text-right">
                                    Total Amount
                                </div>
                                <div class="col-5">
                                    <span class="text-120 text-secondary-d1">@Model.CurrencyPrefix@Model.GrandTotal.GetValueOrDefault().ToString("#,##0.00")</span>
                                </div>
                            </div>

                        </div>
                    </div>
                </div>
                <hr />

                <div>
                    <span class="text-secondary-d1 text-105">Thank you for your business</span>
                    @*<a href="#" class="btn btn-info btn-bold px-4 float-right mt-3 mt-lg-0">Pay Now</a>*@
                </div>
            </div>
        </div>
    </div>
</div>
